{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "Posts"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "required": true
    },
    "comments": {
      "collection": "comments",
      "via": "related",
      "required": false
    },
    "tags": {
      "collection": "tags",
      "via": "related",
      "required": true
    },
    "categories": {
      "collection": "categories",
      "via": "related",
      "required": true
    },
    "attachments": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "likes": {
      "collection": "likes",
      "via": "related",
      "required": false
    },
    "shares": {
      "collection": "shares",
      "via": "related",
      "required": false
    },
    "views": {
      "collection": "views",
      "via": "related",
      "required": false
    }
  }
}
